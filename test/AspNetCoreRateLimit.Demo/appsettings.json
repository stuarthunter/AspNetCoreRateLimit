{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "8.8.8.8", "192.168.0.0/24" ],
    "EndpointWhitelist": [ "delete:/api/values", "*:/api/items", "*:/api/ClientRateLimit", "*:/api/IpRateLimit" ],
    "ClientWhitelist": [ "bypass-key-1", "bypass-key-2" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 2,
        "UseSlidingExpiration": true 
      },
      {
        "Endpoint": "*",
        "Period": "5m",
        "Limit": 3,
        "UseSlidingExpiration": true
      },
      {
        "Endpoint": "post:/api/values",
        "Period": "5m",
        "Limit": 3,
        "UseSlidingExpiration": true
      }
    ]
  },

  "IpRateLimitPolicies": {
    "IpRules": [
      {
        "Ip": "::1/10",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 10,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "get:/api/values",
            "Period": "5m",
            "Limit": 2,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "put:/api/values",
            "Period": "5m",
            "Limit": 2,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "delete:/api/values",
            "Period": "1h",
            "Limit": 2,
            "UseSlidingExpiration": true
          }
        ]
      },
      {
        "Ip": "84.247.85.224",
        "Rules": [
          {
            "Endpoint": "get:/api/values",
            "Period": "1s",
            "Limit": 10,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 2,
            "UseSlidingExpiration": true
          }
        ]
      }
    ]
  },

  "ClientRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "EndpointWhitelist": [ "delete:/api/items", "*:/api/values", "*:/api/ClientRateLimit", "*:/api/IpRateLimit" ],
    "ClientWhitelist": [ "cl-key-a", "cl-key-b" ],
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 2,
        "UseSlidingExpiration": true
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 3,
        "UseSlidingExpiration": true
      },
      {
        "Endpoint": "post:/api/clients",
        "Period": "5m",
        "Limit": 3,
        "UseSlidingExpiration": true
      }
    ]
  },

  "ClientRateLimitPolicies": {
    "ClientRules": [
      {
        "ClientId": "anon",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "1s",
            "Limit": 10,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "get:/api/clients",
            "Period": "1m",
            "Limit": 2,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "put:/api/clients",
            "Period": "5m",
            "Limit": 2,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "delete:/api/clients",
            "Period": "1h",
            "Limit": 2,
            "UseSlidingExpiration": true
          }
        ]
      },
      {
        "ClientId": "cl-key-2",
        "Rules": [
          {
            "Endpoint": "get:/api/clients",
            "Period": "1s",
            "Limit": 10,
            "UseSlidingExpiration": true
          },
          {
            "Endpoint": "*",
            "Period": "1m",
            "Limit": 2,
            "UseSlidingExpiration": true
          }
        ]
      }
    ]
  }
}
